{
    "name": "ambient-music-extension",
    "displayName": "Ambient Music AutoPlayer",
    "description": "Auto-play lofi/ambient music when a VS Code project opens.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.80.0"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "ambientMusic.start",
                "title": "Play Ambient Music"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "typescript": "^5.0.0",
        "vsce": "^2.15.0"
    }
}