{
  "name": "ambient-music-vs-extension",
  "displayName": "Ambient Music AutoPlayer by Taj",
  "icon": "media/logo.png",
  "description": "Auto-play ambient music when a VS Code project opens.",
  "version": "1.3.5",
  "publisher": "taj154dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/taj54/ambient-music-vs-extension.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "keywords": [
    "ambient",
    "music",
    "audio",
    "focus",
    "relaxation",
    "vs-code",
    "vscode-extension",
    "background music",
    "autoplay",
    "productivity",
    "youtube playlist",
    "taj",
    "taj154dev",
    "nature sounds",
    "rain sounds",
    "forest",
    "lofi",
    "chill",
    "vs music player"
  ],
  "categories": [
    "Other"
  ],
  "main": "./dist/src/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "ambientMusic.setPlaylist",
        "title": "ambient-taj: üé∂ Set Playlist (Rain, Forest, Ocean...)"
      },
      {
        "command": "ambientMusic.openTab",
        "title": "ambient-taj: üåê Open Ambient Music Player"
      },
      {
        "command": "ambientMusic.play",
        "title": "ambient-taj: ‚ñ∂Ô∏è Play Ambient Music"
      },
      {
        "command": "ambientMusic.pause",
        "title": "ambient-taj: ‚è∏Ô∏è Pause Music"
      },
      {
        "command": "ambientMusic.resume",
        "title": "ambient-taj: ‚èØ Resume Music"
      },
      {
        "command": "ambientMusic.closeTab",
        "title": "ambient-taj: ‚ùå Close Music Player"
      },
      {
        "command": "ambientMusic.resetPlaylist",
        "title": "ambient-taj: üîÑ Reset Playlist to Default"
      }
    ],
    "configuration": {
      "title": "Ambient Music Settings",
      "properties": {
        "ambientMusic.autoPlayOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start ambient music when VS Code launches"
        },
        "ambientMusic.port": {
          "type": "number",
          "default": 3303,
          "description": "Port for the ambient music WebSocket server. Set to 0 for dynamic port."
        },
        "ambientMusic.switchIntervalMinutes": {
          "type": "number",
          "default": 30,
          "description": "How often (in minutes) to switch to the next ambient video from the playlist."
        },
        "ambientMusic.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose debug logging for Ambient Music."
        },
        "ambientMusic.playlist": {
          "type": "array",
          "description": "Custom playlist of YouTube videos with metadata.",
          "markdownDescription": "üéµ A custom playlist of YouTube videos.\n\nEach item must include:\n- `title` (string): Video title (required)\n- `url` (string): YouTube video URL (required)\n- `tags` (array of strings): Optional tags\n- `channel` (object): Channel info with `name` and `url`\n\n**Example:**\n```json\n{\n  \"title\": \"Peaceful Piano\",\n  \"url\": \"https://youtu.be/abc123\",\n  \"tags\": [\"piano\", \"relax\"],\n  \"channel\": {\n    \"name\": \"Chill Music Co.\",\n    \"url\": \"https://youtube.com/@chillmusicco\"\n  }\n}\n```"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && node ./dist/test/runTest.js"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.0.4",
    "@types/vscode": "^1.80.0",
    "@types/ws": "^8.18.1",
    "@vscode/test-electron": "^2.5.2",
    "chai": "^5.2.0",
    "mocha": "^11.7.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "vsce": "^2.15.0",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "ws": "^8.18.2"
  }
}